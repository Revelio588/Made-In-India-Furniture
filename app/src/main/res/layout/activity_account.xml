<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account_details.AccountActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, UserName"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_margin="15dp"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="UserName"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/username_id"
                    android:layout_gravity="center"
                    android:textAppearance="?android:textAppearanceMedium"

                    android:gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:id="@+id/edit_uname_id"
                    android:src="@drawable/ic_done_black_24dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="useremail@gmail.com"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Mobile Number: "/>

                <EditText
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="0000000000"
                    android:maxLength="10"
                    android:textColor="#000000"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/phoneno_id"
                    android:layout_gravity="center"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_margin="15dp"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    android:id="@+id/edit_phno_id"
                    android:src="@drawable/ic_done_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:text="Address Line 1"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addr_line1"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_marginRight="5dp"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:text="Address Line 2"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addr_line2"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:text="PIN Code"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pincode_id"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_marginRight="5dp"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:text="City/Town"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/city_id"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:text="State"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/state_id"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textAppearance="?android:textAppearanceMedium"/>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_addrs_id"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="SAVE ADDRESS"
                android:textColor="#000000"
                android:background="@drawable/botton_white_bg"/>


        </LinearLayout>
    </ScrollView>



</RelativeLayout>