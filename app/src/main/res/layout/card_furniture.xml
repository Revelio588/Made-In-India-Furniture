<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:clickable="true"
    android:id="@+id/cardF_id"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_marginRight="4dp"


    app:cardCornerRadius="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/diglipur"
                android:id="@+id/furniture_desc"
                android:background="@color/colorPrimary"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/p_name_id"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"
                android:text="Product Name"/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/p_price_id"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:text="Rs.00000"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/p_rate_id"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimaryDark"
                android:drawableRight="@drawable/ic_star_black_24dp"
                android:text=""/>

        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#363333"/>
    </LinearLayout>

</android.support.v7.widget.CardView>